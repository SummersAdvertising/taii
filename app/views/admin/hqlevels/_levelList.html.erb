<% @hqlevel.find_my_direct_childrent().each do |levelsib| %>
	<!-- for show and sortable -->
	<% if current_admin.super == true %>
			<tr <%= "id=dragablecontainer_#{levelsib.id.to_s}" %> class="dragable <%= "tr-#{levelsib.id.to_s}-for-show" %>">
	<% else %>
			<tr <%= "id=dragablecontainer_#{levelsib.id.to_s}" %> class="<%= "tr-#{levelsib.id.to_s}-for-show" %>">
	<% end %>
	
	      <td width="6%">
	      	<img src="/images/folder.png">
	      </td>
			  <td width="76%" id='<%= "variant#{levelsib.id.to_s}" %>'>
					  <%= link_to  levelsib.name,  admin_hqlevel_path(levelsib.id, locale: I18n.locale )  %>
			  </td>
		  	<td width="18%" >
		  		<% if current_admin.super == true || @hqlevel.messup == true %>
		  		<div class="tool"> 
		  			<a <%= "id=level#{levelsib.id.to_s}" %> class='renameLink edit'  title="編輯" ></a>
		  			<%= link_to '', admin_hqlevel_path(levelsib, locale: I18n.locale), method: :delete, title: "刪除", class: 'delete', data: { confirm: 'Are you sure?' }, :remote => true %>
		  		 </div>
		  		 <% end %>
		  	 </td>
	</tr>
	<!-- for show and sortable END-->
	<% if current_admin.super == true || @hqlevel.messup == true %>
	<!-- for edit and unsortable  -->
	<tr <%= "id=renamelevelcontainer_#{levelsib.id.to_s}" %> class="<%= "tr-#{levelsib.id.to_s}-for-edit" %>  list-edit " style="display:none;">
				<td width="6%">
		      	<img src="/images/folder.png">
	      </td>
	  	   <td  width="76%">
	  	   		<div>
	  	   			<%= form_for(levelsib ,:url => admin_hqlevel_path(levelsib.id, locale: I18n.locale), :html => {  :method => "patch", :remote => true, :class => 'ajaxRenameLevelForm', id: "ajaxRenameLevelForm#{levelsib.id.to_s}" } ) do |f| %>
									<div class='errors'></div>
									<%= f.hidden_field :id, :id => "renameLevelID" %>
		
									<%= f.text_field :name , class: 'text' , style: 'width:75%' %>
									<% if current_admin.super == true %>
											<%= f.check_box :messup , { class: 'checkbox'  }, 1, 0 %> MESSUP
									<% else %>
											<%= f.hidden_field :messup , value: true %>		
									<% end %>
						<!-- style modify here -->
							<% end %>
	  	   		</div>
	  	   </td>
		  	  <td width="18%" align='right'>
			  				<%= link_to '儲存', "#", onclick: "$('#ajaxRenameLevelForm#{levelsib.id.to_s}').submit()", title: "儲存" %>
							<a <%= "id=cancellevel#{levelsib.id.to_s}" %> class="cancelRenameALevelbutton" title="取消" href='#' >取消</a>
			  	 </td>
	</tr>
	<!-- for edit and unsortable  END-->
	<% end %> <!-- end auth -->

<% end %>

