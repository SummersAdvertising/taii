<link rel="stylesheet" href="/css/front/investor.css">
<article>
	<h2>關於台一</h2>
        <!-- sidemenu -->
    <%= render  "common/sidemenu" %>
        <section>
      <h3>股利分派</h3>
      <div class="content">
        <div class="table">
       	  <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr style="background:none;border:none">
              <td colspan="7"><h6>85年起（上市後）之股利發放情形</h6></td>
            </tr>
            <tr>
              <th width="15%" align="center">股東會年度</th>
              <th width="15%" align="center">盈餘配股</th>
              <th width="15%" align="center">公積配股</th>
              <th width="15%" align="center">現金股利</th>
              <th width="10%" align="center">合計</th>
              <th width="15%" align="center">股票發放日</th>
              <th width="15%" align="center">現金發放日</th>
            </tr>
            <% @dividend_histories.each do | history | %>			
            <tr>
									<td align="center"><%= history.fiscal_year %></td>
								  <td align="center"><%= history.sre %></td>
								  <td align="center"><%= history.scap %></td>
								  <td align="center"><%= history.cash %></td>
									<td align="center"><%= history.total %></td>
									<% if !history.stock_paymentdate.nil? %>
											  <td align="center"><%= history.stock_paymentdate %></td>
										 <% else %>
								 			  <td align="center">---</td>
									 <% end %>
									<% if !history.cash_paymentdate.nil? %>
											  <td align="center"><%= history.cash_paymentdate %></td>
										 <% else %>
								 			  <td align="center">---</td>
									 <% end %>
						</tr>
						<% end %>
          </table>
        </div>
      </div>
    </section>
</article>

