<link rel="stylesheet" href="/css/front/product.css">
<style>
article h2{background:url(<%= t("env.img_url.pd-01") %>) center 0 no-repeat}
.level-5{padding:0 0 15px 0}
.level-5 > li > a{display:block;width:100%;height:36px;background:url(<%= t("env.img_url.pd-07") %>) 59px 16px no-repeat;
padding:5px 0 0 85px;color:#000}
.level-5 > li > .active{background:url(<%= t("env.img_url.pd-07h") %>) 59px 16px no-repeat;color:#106ab7;font-weight:900}
</style>
<article>
    <h2>產品介紹</h2>
    <aside>
      <ul id="tab">
        <li><a href="<%= hqlevel_path(Hqlevel.return_root_node_on_demand(I18n.locale), :locale =>I18n.locale) %>"><%= t("env.hqlevel_show.overview") %></a></li>
        <li class="active"><a href="javascript: void(0)" class='active'><%= t("env.hqlevel_show.factory") %></a></li>
      </ul>

    <div id="list-box"  >
    
    		<%= render 'sidemenu' %>
    
    </div>
    </aside>
    <section> 
    	<span id="crumb"  data-no-turbolink> </span>
    		
      
        <p id="items_grid"></p>
      
  
    </section>
  </article>
    <script type="text/javascript">
		$(function(){
			//$('.level-2,.level-3,.level-4').hide()
			$('.level-2,.level-3,.level-4,.level-5').hide()
		  $('#list-box a').click(function(){
			  $(this).addClass('active').parent('li').siblings().children('a').removeClass('active');
				$(this).siblings('ul').toggle(500).parent('li').siblings().children('ul').slideUp(500)
		  });
		})
	</script>
